graph TB
    subgraph Web_Tier
        WebClient[Web Client (React/Next.js)]
    end

    subgraph API_Gateway
        Gateway[API Gateway (Port 8000)]
    end

    subgraph Microservices
        AuthService[Auth Service]
        EventService[Event Service]
        NotificationService[Notification Service]
        CommonServices[Common Services]
        AIService[AI Service]
        SubmissionService[Submission Service]
    end

    subgraph Persistence_Layers
        AuthDB[(Auth DB - PostgreSQL)]
        EventDB[(Event DB - PostgreSQL)]
        NotifRedis[(Notification Cache - Redis)]
    end

    subgraph External_Systems
        Gmail[Gmail SMTP Server]
        OpenAI[OpenAI/AI Provider]
    end

    WebClient --> Gateway
    Gateway --> AuthService
    Gateway --> EventService
    
    AuthService --> AuthDB
    AuthService --> CommonServices
    AuthService --> NotificationService
    
    EventService --> EventDB
    EventService --> CommonServices
    EventService --> NotificationService
    EventService --> AIService
    EventService --> SubmissionService
    
    NotificationService --> NotifRedis
    NotificationService --> Gmail
    
    AIService --> OpenAI